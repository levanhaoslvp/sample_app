<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "sample app", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "Help", "#" %></li>
        <% if user_signed_in? %>         
          <li><%= link_to "Profile", "#" %></li>
          <li><%= link_to "Settings", edit_user_registration_path %></li>
          <li>
            <%= link_to t(".link_export"), export_index_path(format: :csv, user_id: current_user.id) %>
          </li>
          <li class="nav-item dropdown" id="noti_side" >
            <%= render "notifications/notification_center", notifications: Notification.get_of(current_user) %>
          </li>
          <li>
            <%= gravatar_for current_user, size: 50 %>
            <%= button_to "Log out", destroy_user_session_path, :method => :delete %>
          </li>
        <% else %>
          <li><%= link_to "Log in", new_user_session_path %></li>
        <% end %>      
      </ul>
    </nav>
  </div>
</header>
